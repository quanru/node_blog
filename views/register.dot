<html>
<head>
  [[= partial('partials/head.dot') ]]
  <script src="/javascripts/account.js"></script>
</head>
<body id="register">
[[= partial('partials/nav.dot') ]]
<div class="center-wrapper container">
  <div class="center-block col-centered col-md-3">
    <h3>你的日记</h3>
    <form method="post">
      <div class="form-group">
        <input name="username" type="text" class="form-control" placeholder="邮箱">
      </div>
      <div class="form-group">
        <input name="password" type="password" class="form-control" placeholder="密码">
      </div>
      <div class="form-group">
        <input id="password1" type="password" class="form-control" placeholder="重复密码"/>
      </div>      
      <div class="alert alert-danger" style="display: none;"></div>
      <div class="alert alert-success" style="display: none;"></div>
      <div class="pull-right">
        <a class="btn btn-link" href="/account/login">直接登录</a>
        <a class="btn btn-success" onclick="validate()">注册</a>
      </div>
    </form>
  </div>
</div>

</body>
</html>
